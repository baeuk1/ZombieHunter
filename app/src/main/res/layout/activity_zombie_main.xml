<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ZombieMainActivity"
    android:gravity="center"
    android:id="@+id/Blood"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZombieHunter"
        android:id="@+id/textView"
        android:textColor="#ff2000"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:textAppearance="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/zombieoriginal"
        android:longClickable="false" />

    <Button
        android:padding="20dp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Level 1"
        android:id="@+id/button"
        android:textColorHighlight="@color/accent_material_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Level 2"
        android:id="@+id/button2"
        android:textColorHighlight="@color/accent_material_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>
