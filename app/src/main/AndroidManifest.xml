<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baeuk.zombiehunter" >

    <uses-sdk
        android:minSdkVersion="19" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/zombiemain"
        android:label="@string/app_name">
        <activity
            android:name=".ZombieMainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LV1Activity"
            android:label="Level 1"
            android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name=".LV2Activity"
            android:label="Level 2"
            android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name=".LV3Activity"
            android:label="Level 3"
            android:theme="@android:style/Theme.Holo">
        </activity>
        <activity
            android:name=".LV4Activity"
            android:label="Level 4"
            android:theme="@android:style/Theme.Holo">
        </activity>
    </application>

</manifest>
